# .env.example - Phase 2 Enhanced Environment Variables

# Existing variables...
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENABLE_PASSWORD_CHANGE=true

# Phase 1 Chart of Accounts Integration
NEXT_PUBLIC_COA_REQUIRED_STRICT=false
NEXT_PUBLIC_PAYROLL_ENABLED=true

# Phase 2 Enhanced Feature Flags

# CoA Enforcement Settings
NEXT_PUBLIC_COA_ENFORCEMENT_MODE=observe  # observe, warn, enforce
NEXT_PUBLIC_COA_LEGACY_MODE_ENABLED=true
NEXT_PUBLIC_COA_WARNINGS_ENABLED=true

# Advanced Payroll Features
NEXT_PUBLIC_ADVANCED_PAYROLL_ENABLED=true
NEXT_PUBLIC_BULK_PAYROLL_POSTING_ENABLED=true
NEXT_PUBLIC_PAYROLL_REVERSAL_ENABLED=true
NEXT_PUBLIC_MULTI_COMPONENT_PAYROLL_ENABLED=true

# Advanced Settings & Configuration
NEXT_PUBLIC_ADVANCED_ACCOUNT_MAPPING_ENABLED=true
NEXT_PUBLIC_DEPARTMENT_ACCOUNT_MAPPING_ENABLED=true
NEXT_PUBLIC_COA_OVERRIDE_ENABLED=false

# Migration & Backfill System
NEXT_PUBLIC_MIGRATION_SYSTEM_ENABLED=true
NEXT_PUBLIC_BACKFILL_PREVIEW_ENABLED=true

# Observability & Monitoring
NEXT_PUBLIC_COA_DASHBOARD_ENABLED=true
NEXT_PUBLIC_PAYROLL_MONITORING_ENABLED=true

# Performance Settings
NEXT_PUBLIC_BULK_PROCESSING_BATCH_SIZE=100
NEXT_PUBLIC_ENABLE_PARALLEL_PROCESSING=false
NEXT_PUBLIC_MAX_REVERSAL_DAYS=30

# Organization-specific Settings (Backend)
COA_DEFAULT_ENFORCEMENT_MODE=observe
PAYROLL_REQUIRE_APPROVAL_FOR_REVERSAL=true
PAYROLL_ENABLE_COMPONENT_DEPENDENCIES=false
PAYROLL_AUTO_CREATE_MISSING_ACCOUNTS=false

# Performance and Monitoring (Backend)
PAYROLL_MONITORING_ENABLED=true
PAYROLL_PERFORMANCE_TRACKING=true
PAYROLL_ALERT_THRESHOLDS_UNMAPPED_COMPONENTS=5
PAYROLL_ALERT_THRESHOLDS_INACTIVE_ACCOUNTS=1
PAYROLL_ALERT_THRESHOLDS_FAILED_RUNS=1

# Database Performance Settings
DB_CONNECTION_POOL_SIZE=20
DB_CONNECTION_POOL_MAX_OVERFLOW=30
DB_CONNECTION_POOL_PRE_PING=true
DB_QUERY_TIMEOUT=30

# Background Task Settings
ENABLE_BACKGROUND_VALIDATION=true
BACKGROUND_TASK_RETRY_ATTEMPTS=3
BACKGROUND_TASK_RETRY_DELAY=60

# Security Settings
PAYROLL_AUDIT_LOG_RETENTION_DAYS=90
COA_CHANGE_AUDIT_ENABLED=true
PAYROLL_DATA_ENCRYPTION_ENABLED=false

# Integration Settings
ENABLE_EXTERNAL_PAYROLL_INTEGRATION=false
PAYROLL_WEBHOOK_ENABLED=false
PAYROLL_API_RATE_LIMIT=100

# Development and Testing
ENABLE_PAYROLL_DEBUG_MODE=false
PAYROLL_MOCK_GL_POSTING=false
ENABLE_PERFORMANCE_PROFILING=false