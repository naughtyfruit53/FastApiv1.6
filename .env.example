# FastAPI ERP Application Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fastapi_erp

# Supabase Configuration (Required for Auth Integration)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=TRITIQ ERP

# Alternative Email Services (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
BREVO_API_KEY=your-brevo-api-key
BREVO_FROM_EMAIL=your-email@domain.com

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# File Storage
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Super Admin Emails
SUPER_ADMIN_EMAILS=admin@tritiq.com,superadmin@tritiq.com

# Environment
ENVIRONMENT=development
DEBUG=true